<h1>Posts</h1>
<% @posts.each do |post| %>
  <div style="border: 1px solid white; display: flex; flex-direction: column; justify-content: center; align-items: center">
    <h2><%= post.title %></h2>
    <p><%= post.body %></p>
    <% if user_signed_in?  %>
      <p><%= post.user.email%></p>
    <% end %>
  </div>
<% end %>
